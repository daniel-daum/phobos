# Build the SFML application
build:
    clang++ -std=c++20 -I/opt/homebrew/include -L/opt/homebrew/lib -lsfml-graphics -lsfml-window -lsfml-system -lsfml-audio -o phobos *.cpp

# Run the application
run: build
    ./phobos

# Clean build artifacts
clean:
    rm -f phobos

# Install dependencies (run this first if SFML is not installed)
install-deps:
    brew install sfml

# Debug build with more verbose output
debug:
    clang++ -std=c++20 -g -Wall -Wextra -I/opt/homebrew/include -L/opt/homebrew/lib -lsfml-graphics -lsfml-window -lsfml-system -lsfml-audio -o phobos-debug main.cpp

# Check SFML installation
check-sfml:
    @echo "Checking SFML installation..."
    @ls -la /opt/homebrew/include/SFML/ 2>/dev/null || echo "SFML headers not found in /opt/homebrew/include/SFML/"
    @ls -la /opt/homebrew/lib/libsfml* 2>/dev/null || echo "SFML libraries not found in /opt/homebrew/lib/"
